<Window x:Class="Conecta4.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conecta4"
        mc:Ignorable="d"
        Title="Lobby" Height="320" Width="600">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="/Imagenes/stripes-background.jpg"></ImageBrush>
        </StackPanel.Background>
        <Image Height="80" Source="Imagenes/LogoConecta4.jpeg"></Image>
        <Border BorderThickness="1" BorderBrush="Black" Background="White" CornerRadius="45" Margin="20">
            <StackPanel Margin="20">
                <TextBlock FontSize="20">Usuario: <TextBlock Text="{Binding Jugador1}"></TextBlock></TextBlock>
                <TextBlock Margin="0,10" FontStyle="Italic" FontSize="20" Text="{Binding Mensaje}"></TextBlock>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
